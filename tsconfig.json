{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES5",
      "esModuleInterop": true
    }
  }
}
